<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tp3_hci.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_devices"
        android:name="com.example.tp3_hci.ui.devices.DevicesFragment"
        android:label="@string/title_devices"
        tools:layout="@layout/fragment_devices" />

    <fragment
        android:id="@+id/navigation_routines"
        android:name="com.example.tp3_hci.ui.routine.RoutineFragment"
        android:label="@string/title_routines"
        tools:layout="@layout/fragment_routines" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.tp3_hci.ui.user.UserFragment"
        android:label="@string/title_users"
        tools:layout="@layout/fragment_user" />
</navigation>